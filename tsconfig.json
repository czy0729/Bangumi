{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "lib": ["es2020"],
    "types": ["react", "react-native"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": false,
    "noImplicitAny": false,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    // "strictNullChecks": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@_": ["src/screens/_"],
      "@_/*": ["src/screens/_/*"],
      "@assets": ["src/assets"],
      "@assets/*": ["src/assets/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@constants": ["src/constants"],
      "@constants/*": ["src/constants/*"],
      "@screens": ["src/screens"],
      "@screens/*": ["src/screens/*"],
      "@stores": ["src/stores"],
      "@stores/*": ["src/stores/*"],
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      "@tinygrail": ["src/screens/tinygrail"],
      "@tinygrail/*": ["src/screens/tinygrail/*"],
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@src": ["src"],
      "@src/*": ["src/*"],
      "@": ["./"],
      "@/*": ["./*"]
    }
  },
  "include": ["src", "types"],
  "exclude": [
    "android",
    "dist",
    "ios",
    "metro-cache",
    "node_modules",
    "packages",
    "src/assets",
    "web"
  ]
}
